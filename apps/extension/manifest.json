{
  "manifest_version": 3,
  "name": "NeuroSync Extension",
  "version": "1.0.0",
  "description": "Multilingual speech to text extension for NeuroSync",
  "permissions": ["activeTab", "scripting"],
  "action": {
    "default_popup": "index.html"
  },
  "background": {
    "service_worker": "src/background.ts",
    "type": "module"
  }
}
